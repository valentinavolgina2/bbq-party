<%= form_for @event, data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {errors: @event.errors} %>

  <div class="field mb-3">
    <%= f.label :title, class: 'fw-bold' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :address, class: 'fw-bold' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :datetime, class: 'fw-bold' %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="field mb-3">
    <%= f.label :description, class: 'fw-bold' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :pincode, class: 'fw-bold' %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions mb-2">
    <%= f.submit t('views.buttons.save'), class: 'btn btn-primary' %>
    или <%= link_to t('views.buttons.cancel'), :back %>
  </div>
<% end %>
