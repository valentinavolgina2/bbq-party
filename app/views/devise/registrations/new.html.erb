<div class="row w-100 mx-0">
  <div class="col-md-6 offset-md-3">
    <h2 class="mb-4"><%= t('views.users.create.title') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 data: { turbo: false }) do |f| %>

      <%= render partial: 'partials/form_errors', locals: {errors: resource.errors} %>

      <div class="field mb-3">
        <%= f.label :email, class: 'fw-bold' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :name, class: 'fw-bold' %><br />
        <%= f.text_field :name, autocomplete: 'name', class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: 'fw-bold' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('views.users.password.edit.limit') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: 'fw-bold' %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="actions mb-2">
        <%= f.submit t('views.users.create.action'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
