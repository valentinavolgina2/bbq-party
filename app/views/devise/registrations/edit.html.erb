<div class="row w-100 mx-0">
  <div class="col-md-6 offset-md-3">
    <h2 class="mb-4"><%= t('views.users.password.edit.title') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {errors: resource.errors} %>

      <div class="field mb-3">
        <%= f.label :current_password, class: 'fw-bold' %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: 'fw-bold' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length%> <%= t('views.users.password.edit.limit') %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: 'fw-bold' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="actions mb-2">
        <%= f.submit t('views.buttons.save'), class: 'btn btn-primary' %>
        или <%= link_to t('views.buttons.cancel'), :back %>
      </div>
    <% end %>
  </div>
</div>
