<div class="row w-100 mx-0">
  <div class="col-md-6 offset-md-3">
    <h2 class="mb-4"><%= t('views.users.password.edit.title') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                 html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {errors: resource.errors} %>

      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-3">
        <%= f.label :password, t('views.users.password.edit.new_passowrd'), class: 'fw-bold' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('views.users.password.edit.limit') %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, t('views.users.password.edit.confirm_new_password'), class: 'fw-bold' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions mb-2">
        <%= f.submit t('views.users.password.edit.action'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
