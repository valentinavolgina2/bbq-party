<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {errors: subscription.errors} %>

  <% unless user_signed_in? %>
    <div class="field mb-3">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('views.subscriptions.subscription.submit_text'), class: 'btn btn-primary' %>
  </div>
<% end %>
