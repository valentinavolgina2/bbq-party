<div class="row w-100 mx-0">
  <div class="col-md-6 offset-md-3">
    <h2 class="mb-4"><%= t('views.users.edit.title') %></h2>

    <%= render 'form' %>

    <p class="mt-3">
      <%= link_to t('views.links.password_reset'), edit_user_registration_path %>
    </p>

    <h2 class="mt-5 mb-4"><%= t('views.users.cancel.title') %></h2>

    <p class="d-inline"><%= t('views.users.cancel.question') %>
      <%= button_to t('views.users.cancel.action'),
                    user_registration_path,
                    form: {data: {turbo_confirm: t('views.users.cancel.confirmation')}},
                    method: :delete,
                    form_class: 'd-inline',
                    class: 'd-inline border-0 bg-transparent text-danger ps-2' %>
    </p>
  </div>
</div>
