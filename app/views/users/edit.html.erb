<div class="row w-100 mx-0">
  <div class="col-md-6 offset-md-3">
    <h2 class="mb-4">Edit profile</h2>

    <%= render 'form' %>

    <p class="mt-3">
      <%= link_to 'Change password', edit_user_registration_path %>
    </p>

    <h2 class="mt-5 mb-4">Cancel my account</h2>

    <p class="d-inline">Unhappy?
      <%= button_to 'Cancel my account',
                    user_registration_path,
                    form: {data: {turbo_confirm: 'Are you sure you wanna delete your profile?'}},
                    method: :delete,
                    form_class: 'd-inline',
                    class: 'd-inline border-0 bg-transparent text-danger ps-2' %>
    </p>
  </div>
</div>
