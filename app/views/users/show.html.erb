<div class="text-center">
  <h1><%= @user.name %></h1>

  <p class="mt-3">
    <%= link_to "Edit profile", edit_user_path(@user), class: 'btn btn-primary' %>
  </p>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3 class="my-5">Hosted:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="mt-3">User hasn't hosted any event yet</p>
      <% end %>
    </div>
  </div>
</div>
